{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "contexts/*": ["./src/contexts/*"],
      "hooks": ["./src/hooks"],
      "lib/*": ["./src/lib/*"],
      "development_support/*": ["./src/development_support/*"]
    },
    "types": [
      "vite/client",
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
